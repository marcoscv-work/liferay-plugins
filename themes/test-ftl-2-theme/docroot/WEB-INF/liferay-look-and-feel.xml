<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.10+</version>
	</compatibility>
	<theme id="test-ftl-2" name="Test Ftl 2">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="show-breadcrumbs" options="true,false" type="select" value="false" />
			<setting configurable="true" key="show-social-media" options="true,false" type="select" value="true" />
			<setting configurable="true" key="show-navigation" options="true,false" type="select" value="true" />
			<setting configurable="true" key="portlet-setup-show-borders-default" options="true,false" type="select" value="true" />
			<setting configurable="true" key="show-page-title" options="true,false" type="select" value="true"/>
			<setting configurable="true" key="show-footer" options="true,false" type="select" value="true"/>
			<setting configurable="true" key="show-heading" options="true,false" type="select" value="true"/>
		</settings>
		<color-scheme id="01" name="Default">
		<css-class>default</css-class>
		<color-scheme-images-path>${images-path}/color_schemes/default</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="02" name="Christmas">
		<css-class>christmas</css-class>
		</color-scheme>
		<color-scheme id="03" name="Ice">
		<css-class>ice</css-class>
		</color-scheme>
	</theme>
</look-and-feel>